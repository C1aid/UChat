<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <RadialGradientBrush x:Key="WindowBackgroundBrush" 
                         GradientOrigin="0.5,0.5" Center="0.5,0.5" 
                         RadiusX="1.0" RadiusY="1.0">
        <GradientStop Color="#DFD8C9" Offset="0.0"/> <GradientStop Color="#F3F0E9" Offset="1.0"/> </RadialGradientBrush>

        <RadialGradientBrush x:Key="MessageListBrush"
                     GradientOrigin="1,0"
                     Center="1,0"
                     RadiusX="2" RadiusY="2">
    
    <GradientStop Color="#F2C4C4" Offset="0.0"/>
    <GradientStop Color="#FFFFFF" Offset="0.9"/>
    </RadialGradientBrush>

    <SolidColorBrush x:Key="LeftPanelBrush" Color="#B3AC9B"/>
    <SolidColorBrush x:Key="ChatListBrush" Color="#D2CCBB"/>

    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>

    <Color x:Key="AccentColor">#262626</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/> 

    <SolidColorBrush x:Key="ForegroundPrimaryBrush" Color="#3D3226"/>
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="#857A6B"/>
    <SolidColorBrush x:Key="ForegroundTetriaryBrush" Color="#3E3434"/>
    
    <SolidColorBrush x:Key="MessageInputBrush" Color="#FFFFFF"/>
    
    <Color x:Key="BorderColor">#D4C5B0</Color>
    <SolidColorBrush x:Key="BorderBrushColor" Color="{StaticResource BorderColor}"/>
    
    <SolidColorBrush x:Key="ReceivedMessageTextBrush" Color="#3D3226"/>
    <SolidColorBrush x:Key="SentMessageTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="RecieveBubbleBrush" Color="#E8E0D5"/>
    <SolidColorBrush x:Key="SendBubbleBrush" Color="#D9A6A6"/>  

    <SolidColorBrush x:Key="DeleteButtonBrush" Color="#E1B6B6" Opacity="0.60"/>
    <SolidColorBrush x:Key="DeleteTextBrush" Color="#8C5E5E"/>

    <Style x:Key="RoundButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="14"/>
        <Setter Property="Height" Value="14"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="7">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="18" ShadowDepth="4" Color="#22000000" Opacity="0.18"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ToggleIconStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="#7A7060"/> 
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid x:Name="GridRoot" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#3D3528"/> 
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="GridRoot" Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#3D3528"/> 
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>