<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <RadialGradientBrush x:Key="WindowBackgroundBrush" 
                         GradientOrigin="0.5,0.5" Center="0.5,0.5" 
                         RadiusX="1.0" RadiusY="1.0">
        <GradientStop Color="#F4F7F9" Offset="0.0"/> <GradientStop Color="#BCD0DE" Offset="1.0"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="MessageListBrush"
                         GradientOrigin="1, 0"
                        Center="1, 0" 
                        RadiusX="1.5" RadiusY="1.5">
        <GradientStop Color="#B8C9DB" Offset="0.0"/>
        <GradientStop Color="#FFFFFF" Offset="1.0"/>
    </RadialGradientBrush>

    <SolidColorBrush x:Key="LeftPanelBrush" Color="#B8C9DB" Opacity="0.8"/>
    <SolidColorBrush x:Key="ChatListBrush" Color="#FFFFFF" Opacity="0.5"/>
    <SolidColorBrush x:Key="MessageInputBrush" Color="#FFFFFF"/>

    <SolidColorBrush x:Key="AccentBrush" Color="#4A90E2"/>
    <Color x:Key="AccentColor">#4A90E2</Color>
    
    <SolidColorBrush x:Key="ForegroundPrimaryBrush" Color="#1A2639"/>
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="#7B8D9E"/>
    <SolidColorBrush x:Key="ForegroundTetriaryBrush" Color="#1A2639"/>
    <SolidColorBrush x:Key="BorderBrushColor" Color="#4A90E2" Opacity="0.2"/>
    <Color x:Key="BorderColor">#4A90E2</Color>

    <SolidColorBrush x:Key="RecieveBubbleBrush" Color="#FFFFFF"/>
    
    <LinearGradientBrush x:Key="SendBubbleBrush" StartPoint="0,0" EndPoint="1,1">
    <GradientStop Color="#5B86E5" Offset="0.0"/> <GradientStop Color="#36D1DC" Offset="1.0"/> </LinearGradientBrush>
    
    <SolidColorBrush x:Key="ReceivedMessageTextBrush" Color="#1A2639"/> 
    <SolidColorBrush x:Key="SentMessageTextBrush" Color="#FFFFFF"/> 
    <SolidColorBrush x:Key="SendTimeBrush" Color="#BBDEFB"/>
    <SolidColorBrush x:Key="RecieveTimeBrush" Color="#90A4AE"/>

    <SolidColorBrush x:Key="DeleteButtonBrush" Color="#FFEBEE" Opacity="1.0"/>
    <SolidColorBrush x:Key="DeleteTextBrush" Color="#E57373"/>

    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="#4A90E2" Opacity="0.4"/>

    <Style x:Key="RoundButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="14"/>
        <Setter Property="Height" Value="14"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#B0C4DE" Opacity="0.3"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ToggleIconStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="#90A4AE"/> <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid x:Name="GridRoot" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                             <Setter Property="Foreground" Value="#4A90E2"/> </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="GridRoot" Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#4A90E2"/> </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="GridRoot" Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#4A90E2"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>