<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#0F1117"/>

    <RadialGradientBrush x:Key="MessageListBrush"
                         GradientOrigin="1, 0"
                        Center="1, 0" 
                        RadiusX="1.5" RadiusY="1.5">
        <GradientStop Color="#1A202E" Offset="0.0"/>
        <GradientStop Color="#0F1117" Offset="1.0"/>
    </RadialGradientBrush>

    <SolidColorBrush x:Key="LeftPanelBrush" Color="#1A1D26" Opacity="0.95"/>
    <SolidColorBrush x:Key="ChatListBrush" Color="#1A1D26" Opacity="0.5"/>
    
    <SolidColorBrush x:Key="MessageInputBrush" Color="#15171E"/>

    <SolidColorBrush x:Key="AccentBrush" Color="#3D8BFF"/>
    <Color x:Key="AccentColor">#3D8BFF</Color>
    
    <SolidColorBrush x:Key="ForegroundPrimaryBrush" Color="#E7ECF0"/> 
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="#7A8699"/>
    <SolidColorBrush x:Key="ForegroundTetriaryBrush" Color="#E7ECF0"/> 

    <SolidColorBrush x:Key="BorderBrushColor" Color="#212530"/>
    <Color x:Key="BorderColor">#212530</Color>

    <SolidColorBrush x:Key="RecieveBubbleBrush" Color="#1A1D26"/>
    
    <LinearGradientBrush x:Key="SendBubbleBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#3D8BFF" Offset="0.0"/> <GradientStop Color="#2563EB" Offset="1.0"/> </LinearGradientBrush>
    
    <SolidColorBrush x:Key="ReceivedMessageTextBrush" Color="#E7ECF0"/>
    <SolidColorBrush x:Key="SentMessageTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SendTimeBrush" Color="#B3D1FF"/>
    <SolidColorBrush x:Key="RecieveTimeBrush" Color="#586375"/>

    <SolidColorBrush x:Key="DeleteButtonBrush" Color="#4A2020" Opacity="0.7"/>
    <SolidColorBrush x:Key="DeleteTextBrush" Color="#FF6B6B"/>

    <Style x:Key="RoundButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="14"/>
        <Setter Property="Height" Value="14"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="18" ShadowDepth="4" Color="#000000" Opacity="0.3"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ToggleIconStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="#525E75"/> <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid x:Name="GridRoot" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                             <Setter Property="Foreground" Value="#3D8BFF"/> </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="GridRoot" Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#E7ECF0"/> </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="GridRoot" Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#E7ECF0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>