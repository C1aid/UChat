<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <RadialGradientBrush x:Key="WindowBackgroundBrush" 
                         GradientOrigin="0.5,0.5" Center="0.5,0.5" 
                         RadiusX="1.0" RadiusY="1.0">
        <GradientStop Color="#150A18" Offset="0.0"/> <GradientStop Color="#010000" Offset="1.0"/>
        </RadialGradientBrush>

    <RadialGradientBrush x:Key="MessageListBrush"
                         GradientOrigin="1, 0"
                        Center="1, 0" 
                        RadiusX="1.5" RadiusY="1.5">
        <GradientStop Color="#1A0E1C" Offset="0.0"/> <GradientStop Color="#998799" Offset="1.0"/> </RadialGradientBrush>

    <SolidColorBrush x:Key="LeftPanelBrush" Color="#2A1B2E" Opacity="0.9"/>
    <SolidColorBrush x:Key="ChatListBrush" Color="#2A1B2E" Opacity="0.5"/>
    
    <SolidColorBrush x:Key="MessageInputBrush" Color="#2A1B2E" Opacity="0.8"/>

    <SolidColorBrush x:Key="AccentBrush" Color="#AC8CAB"/>
    <Color x:Key="AccentColor">#AC8CAB</Color>
    
    <SolidColorBrush x:Key="ForegroundPrimaryBrush" Color="#E5DEE1"/>
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="#998799"/> 
    <SolidColorBrush x:Key="ForegroundTetriaryBrush" Color="#E5DEE1"/> 
    <SolidColorBrush x:Key="BorderBrushColor" Color="#7A5C80" Opacity="0.4"/>
    <Color x:Key="BorderColor">#7A5C80</Color>

    <SolidColorBrush x:Key="RecieveBubbleBrush" Color="#35283B"/>
    
    <LinearGradientBrush x:Key="SendBubbleBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#ac8cab" Offset="0.0"/> <GradientStop Color="#502a57" Offset="1.0"/> </LinearGradientBrush>
    
    <SolidColorBrush x:Key="ReceivedMessageTextBrush" Color="#E6DCEB"/>
    <SolidColorBrush x:Key="SentMessageTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SendTimeBrush" Color="#D8BFD8"/>
    <SolidColorBrush x:Key="RecieveTimeBrush" Color="#998799"/>

    <SolidColorBrush x:Key="DeleteButtonBrush" Color="#36141A" Opacity="0.6"/>
    <SolidColorBrush x:Key="DeleteTextBrush" Color="#C27E8A"/>
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="#AC8CAB" Opacity="0.4"/>

    <Style x:Key="RoundButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="14"/>
        <Setter Property="Height" Value="14"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="2" Color="#000000" Opacity="0.5"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ToggleIconStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="#706070"/> <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid x:Name="GridRoot" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                             <Setter Property="Foreground" Value="#ac8cab"/> </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="GridRoot" Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#E6DCEB"/> </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="GridRoot" Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#ac8cab"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>