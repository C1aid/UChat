<Window x:Class="uchat.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в чат" Height="300" Width="300"
        WindowStartupLocation="CenterScreen">
    
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Имя пользователя:" Margin="0,0,0,5"/>
        <TextBox x:Name="UsernameBox" Margin="0,0,0,10"/>

        <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>

        <Button Content="Войти" Click="LoginButton_Click" Height="30"/>
    </StackPanel>
</Window>