<UserControl x:Class="uchat.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             HorizontalAlignment="Stretch"
             HorizontalContentAlignment="Stretch">
    <UserControl.Resources>
        <Style x:Key="SoftButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#3D3528"/>
            <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="25,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="15">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="6" ShadowDepth="1" Color="#20000000" Opacity="0.1"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8E8E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#8B7355"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="30,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="15">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#40000000" Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource SoftButtonStyle}">
            <Setter Property="Background" Value="#F5D5D5"/>
            <Setter Property="Foreground" Value="#8B2E2E"/>
        </Style>

        <Style x:Key="ThemeButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="15"
                                Margin="0,0,0,10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" 
                                                 ShadowDepth="0" 
                                                 Color="#20000000" 
                                                 Opacity="0.1"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Ellipse x:Name="radioCircle" 
                                         Grid.Column="0" 
                                         Width="20" 
                                         Height="20" 
                                         Margin="0,0,15,0"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Left"
                                         StrokeThickness="2">
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="Transparent"/>
                                    </Ellipse.Fill>
                                    <Ellipse.Stroke>
                                        <SolidColorBrush Color="#CCCCCC"/>
                                    </Ellipse.Stroke>
                                </Ellipse>
                                
                                <ContentPresenter Grid.Column="1" 
                                                  HorizontalAlignment="Left" 
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8E0D0"/>
                                <Setter TargetName="radioCircle" Property="Fill" Value="#8B7355"/>
                                <Setter TargetName="radioCircle" Property="Stroke" Value="#8B7355"/>
                                <Setter Property="Foreground" Value="#1D1D1F"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#1D1D1F"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent" HorizontalAlignment="Stretch">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" HorizontalAlignment="Stretch">
            <Grid Margin="50,50,0,50" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header with Save button -->
                <Grid Grid.Row="0" Margin="0,0,0,40">
                    <TextBlock Text="Settings"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="#3D3528"
                               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="1" Color="#F5F5DC" Opacity="0.2"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <Button x:Name="SaveButton"
                            Content="Save changes"
                            Style="{StaticResource PrimaryButtonStyle}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Width="280"
                            Click="SaveButton_Click"/>
                </Grid>

                <!-- Profile Section -->
                <Border Grid.Row="1" 
                        Background="White" 
                        CornerRadius="25" 
                        Padding="40" 
                        Margin="0,0,0,25"
                        HorizontalAlignment="Stretch"
                        BorderThickness="1.5">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#80FFFFFF" Offset="0"/>
                            <GradientStop Color="#20FFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="25" 
                                         ShadowDepth="0" 
                                         Color="#30000000" 
                                         Opacity="0.12"/>
                    </Border.Effect>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Avatar -->
                        <StackPanel Grid.Column="0" 
                                  Margin="0,0,30,0"
                                  HorizontalAlignment="Center">
                            <Grid>
                                <Button x:Name="AvatarButton"
                                        Width="120"
                                        Height="120"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="AvatarButton_Click"
                                        HorizontalAlignment="Center">
                                    <Grid>
                                        <Ellipse x:Name="AvatarCircle" 
                                                 Width="120" 
                                                 Height="120"
                                                 Stroke="#E0E0E0"
                                                 StrokeThickness="2">
                                            <Ellipse.Fill>
                                                <ImageBrush x:Name="AvatarImage" Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <Viewbox Width="16" Height="16" Stretch="Uniform"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0,0,-5,-5">
                                            <Canvas Width="256" Height="256">
                                                <Path Data="M229.66,58.34l-32-32a8,8,0,0,0-11.32,0l-96,96A8,8,0,0,0,88,128v32a8,8,0,0,0,8,8h32a8,8,0,0,0,5.66-2.34l96-96A8,8,0,0,0,229.66,58.34ZM124.69,152H104V131.31l64-64L188.69,88ZM200,76.69,179.31,56,192,43.31,212.69,64ZM224,128v80a16,16,0,0,1-16,16H48a16,16,0,0,1-16-16V48A16,16,0,0,1,48,32h80a8,8,0,0,1,0,16H48V208H208V128a8,8,0,0,1,16,0Z" 
                                          Fill="{DynamicResource ForegroundSecondaryBrush}"/>
                                            </Canvas>
                                        </Viewbox>
                                    </Grid>
                                </Button>
                            </Grid>
                        </StackPanel>

                        <!-- Profile Fields -->
                        <StackPanel Grid.Column="1">
                            <!-- Name Field -->
                            <StackPanel Margin="0,0,0,20">
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Name"
                                               Foreground="#666666"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                    <Button Background="Transparent"
                                            BorderThickness="0"
                                            HorizontalAlignment="Right"
                                            Padding="5"
                                            Cursor="Hand"
                                            Click="EditName_Click">
                                        <Viewbox Width="16" Height="16" Stretch="Uniform">
                                            <Canvas Width="256" Height="256">
                                                <Path Data="M229.66,58.34l-32-32a8,8,0,0,0-11.32,0l-96,96A8,8,0,0,0,88,128v32a8,8,0,0,0,8,8h32a8,8,0,0,0,5.66-2.34l96-96A8,8,0,0,0,229.66,58.34ZM124.69,152H104V131.31l64-64L188.69,88ZM200,76.69,179.31,56,192,43.31,212.69,64ZM224,128v80a16,16,0,0,1-16,16H48a16,16,0,0,1-16-16V48A16,16,0,0,1,48,32h80a8,8,0,0,1,0,16H48V208H208V128a8,8,0,0,1,16,0Z" 
                                          Fill="{DynamicResource ForegroundSecondaryBrush}"/>
                                            </Canvas>
                                        </Viewbox>
                                    </Button>
                                </Grid>
                                <Border Background="#F8F8F8" 
                                        CornerRadius="12" 
                                        Padding="18,14"
                                        BorderThickness="1"
                                        BorderBrush="#E0E0E0">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="18" ShadowDepth="4" Color="#22000000" Opacity="0.18"/>
                                    </Border.Effect>
                                    <TextBox x:Name="DisplayNameBox"
                                             Style="{StaticResource ModernTextBox}"/>
                                </Border>
                            </StackPanel>

                            <!-- Username Field -->
                            <StackPanel Margin="0,0,0,20">
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Username"
                                               Foreground="#666666"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                    <Button Background="Transparent"
                                            BorderThickness="0"
                                            HorizontalAlignment="Right"
                                            Padding="5"
                                            Cursor="Hand"
                                            Click="EditUsername_Click">
                                        <Image Source="/Assets/Images/edit.png" 
                                               Width="16" 
                                               Height="16" 
                                               Stretch="Uniform"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Button>
                                </Grid>
                                <Border Background="#F5F5F5" 
                                        CornerRadius="10" 
                                        Padding="15,12"
                                        BorderThickness="0"
                                        BorderBrush="#40FFFFFF">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="18" ShadowDepth="4" Color="#22000000" Opacity="0.18"/>
                                    </Border.Effect>
                                    <TextBox x:Name="UsernameBox"
                                             Style="{StaticResource ModernTextBox}"/>
                                </Border>
                            </StackPanel>

                            <!-- Profile Info Field -->
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Profile info"
                                               Foreground="#666666"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                    <Button Background="Transparent"
                                            BorderThickness="0"
                                            HorizontalAlignment="Right"
                                            Padding="5"
                                            Cursor="Hand"
                                            Click="EditProfileInfo_Click">
                                        <Image Source="/Assets/Images/edit.png" 
                                               Width="16" 
                                               Height="16" 
                                               Stretch="Uniform"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Button>
                                </Grid>
                                <Border Background="#F5F5F5" 
                                        CornerRadius="10" 
                                        Padding="15,12"
                                        BorderThickness="0"
                                        BorderBrush="#40FFFFFF">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="18" ShadowDepth="4" Color="#22000000" Opacity="0.18"/>
                                    </Border.Effect>
                                    <TextBox x:Name="ProfileInfoBox"
                                             Style="{StaticResource ModernTextBox}"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             MinHeight="50"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Theme Section -->
                <Border Grid.Row="2" 
                        Background="White" 
                        CornerRadius="25" 
                        Padding="40" 
                        Margin="0,0,0,25"
                        HorizontalAlignment="Stretch"
                        BorderThickness="1.5">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#80FFFFFF" Offset="0"/>
                            <GradientStop Color="#20FFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="25" 
                                         ShadowDepth="0" 
                                         Color="#30000000" 
                                         Opacity="0.12"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="Theme"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#3D3528"
                                   Margin="0,0,0,25">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="3" ShadowDepth="1" Color="#F5F5DC" Opacity="0.2"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <StackPanel>
                            <RadioButton x:Name="LatteThemeRadio"
                                         Content="Latte"
                                         GroupName="Theme"
                                         Style="{StaticResource ThemeButtonStyle}"
                                         Checked="ThemeRadioButton_Checked">
                                <RadioButton.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="Latte" 
                                                       FontSize="15" 
                                                       FontWeight="Medium"
                                                       Foreground="#1D1D1F"/>
                                            <TextBlock Text="Warm, earthy tones for a cozy vibe" 
                                                       FontSize="12" 
                                                       Foreground="#666666"
                                                       Margin="35,5,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </RadioButton.ContentTemplate>
                            </RadioButton>

                            <RadioButton x:Name="MatchaThemeRadio"
                                         Content="Matcha"
                                         GroupName="Theme"
                                         Style="{StaticResource ThemeButtonStyle}"
                                         Checked="ThemeRadioButton_Checked">
                                <RadioButton.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="Matcha" 
                                                       FontSize="15" 
                                                       FontWeight="Medium"
                                                       Foreground="#1D1D1F"/>
                                            <TextBlock Text="Fresh greens with a sweet pink touch" 
                                                       FontSize="12" 
                                                       Foreground="#666666"
                                                       Margin="35,5,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </RadioButton.ContentTemplate>
                            </RadioButton>

                            <RadioButton x:Name="OceanBreezeThemeRadio"
                                         Content="Ocean Breeze"
                                         GroupName="Theme"
                                         Style="{StaticResource ThemeButtonStyle}"
                                         Checked="ThemeRadioButton_Checked">
                                <RadioButton.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="Ocean Breeze" 
                                                       FontSize="15" 
                                                       FontWeight="Medium"
                                                       Foreground="#1D1D1F"/>
                                            <TextBlock Text="Cold, airy, oceanic vibes" 
                                                       FontSize="12" 
                                                       Foreground="#666666"
                                                       Margin="35,5,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </RadioButton.ContentTemplate>
                            </RadioButton>

                            <RadioButton x:Name="DeepSpaceThemeRadio"
                                         Content="Deep Space"
                                         GroupName="Theme"
                                         Style="{StaticResource ThemeButtonStyle}"
                                         Checked="ThemeRadioButton_Checked">
                                <RadioButton.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="Deep Space" 
                                                       FontSize="15" 
                                                       FontWeight="Medium"
                                                       Foreground="#1D1D1F"/>
                                            <TextBlock Text="Dark, strict, modern - Discord-like" 
                                                       FontSize="12" 
                                                       Foreground="#666666"
                                                       Margin="35,5,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </RadioButton.ContentTemplate>
                            </RadioButton>

                            <RadioButton x:Name="WarmGlowThemeRadio"
                                         Content="Warm Glow"
                                         GroupName="Theme"
                                         Style="{StaticResource ThemeButtonStyle}"
                                         Checked="ThemeRadioButton_Checked">
                                <RadioButton.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="Warm Glow" 
                                                       FontSize="15" 
                                                       FontWeight="Medium"
                                                       Foreground="#1D1D1F"/>
                                            <TextBlock Text="Dark burgundy with golden accents" 
                                                       FontSize="12" 
                                                       Foreground="#666666"
                                                       Margin="35,5,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </RadioButton.ContentTemplate>
                            </RadioButton>

                            <RadioButton x:Name="NorthernColdThemeRadio"
                                         Content="Northern Cold"
                                         GroupName="Theme"
                                         Style="{StaticResource ThemeButtonStyle}"
                                         Checked="ThemeRadioButton_Checked">
                                <RadioButton.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="Northern Cold" 
                                                       FontSize="15" 
                                                       FontWeight="Medium"
                                                       Foreground="#1D1D1F"/>
                                            <TextBlock Text="Light, minimalistic, bluish-steel" 
                                                       FontSize="12" 
                                                       Foreground="#666666"
                                                       Margin="35,5,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </RadioButton.ContentTemplate>
                            </RadioButton>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Grid Grid.Row="3" Margin="0,20,0,0">
                    <Button x:Name="DeleteAccountButton"
                            Content="Delete account"
                            Style="{StaticResource DangerButtonStyle}"
                            HorizontalAlignment="Center"
                            Width="200"
                            Click="DeleteAccountButton_Click"/>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
