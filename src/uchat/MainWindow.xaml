<Window x:Class="uchat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="uChat" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F0F2F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

        <ListBox x:Name="MessagesList" 
                 Grid.Row="0" 
                 Margin="10" 
                 Background="White" 
                 BorderThickness="0"
                 FontSize="14"/>

        <Border Grid.Row="1" Background="White" Padding="10" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="MessageInput" 
                         Grid.Column="0" 
                         Height="40" 
                         Padding="5,10"
                         VerticalContentAlignment="Center"
                         FontSize="14"
                         KeyDown="MessageInput_KeyDown"/>

                <Button Content="Отправить" 
                        Grid.Column="1" 
                        Margin="10,0,0,0" 
                        Background="#0078D7" 
                        Foreground="White"
                        FontWeight="Bold"
                        Click="SendButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>